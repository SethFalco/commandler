<!doctype html>
<html>
    <head>
        <title>$app_name | $page_name</title>
        <meta charset="UTF-8"/>
        <link rel="icon" type="image/${app_icon_type}" href="$app_icon"/>
        <link rel="stylesheet" type="text/css" href="/css/styles.css">
        <link rel="stylesheet" type="text/css" href="/css/reset.css"/>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">

        ## We only ever use this on the homepage, no lead to load it for others.
        #if($page_name.equals("Home"))
            <link rel="stylesheet" type="text/css" href="/css/darcula.css">
            <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.13.1/highlight.min.js"></script>
            <script>hljs.initHighlightingOnLoad();</script>
        #end

        <meta property="og:site_name" content="$app_name"/>
        <meta property="og:title" content="$app_name | Help"/>
        <meta property="og:description" content="$app_description"/>
        <meta property="og:image" content="$app_logo"/>
    </head>
    <body>
        <nav class="left">
            <div id="app-info">
                <a href="/">
                    <h1 id="title">$app_name</h1>
                    <img id="logo" src=$app_logo alt="Logo representing the application."/>
                </a>
            </div>
            <ul>
                #foreach($entry in $all_groups.entrySet())
                    #set($group_iter = $entry.key)
                    #set($group_iter_modules = $entry.value)
                    <li class="group #if($group_iter.equals($this_group)) selected #end">
                        <a href="/groups/${builder.toOutputFriendlyName($group_iter)}.html"><h2>$group_iter</h2></a>
                        <ul class="module">
                            #foreach($module in $group_iter_modules)
                                #set($module_name = $module.getAnnotation().id())
                                <a href="/modules/${builder.toOutputFriendlyName($module_name)}.html">
                                    <li class="module #if($module_name.equals($this_name)) selected #end">
                                        <h3>$module_name</h3>
                                    </li>
                                </a>
                            #end
                        </ul>
                    </li>
                #end
            </ul>
        </nav>
        <div id="right-panel">
            #if($content.endsWith(".vm"))
                #parse($content)
            #else
                $content
            #end
        </div>
    </body>
</html>
