<!doctype html>
<html>
    <head>
        <title>$data.getName() | $page_name</title>
        <meta charset="UTF-8"/>

        #set($icon = $data.getFavicon())
        #if($icon)
            <link rel="icon" type="image/${icon.getType()}" href="$icon.getIcon()"/>
        #end

        #set($style = $data.getStyle())
        #set($font = $style.getFont())
        <style>
            html {
                #set($colors = $style.getColors())
                --pri-color: $utils.toRgba($colors.getPrimary());
                --sec-color: $utils.toRgba($colors.getSecondary());
                --ter-color: $utils.toRgba($colors.getTertiary());
                --text-color: $utils.toRgba($colors.getText());

                --font: $font.getName();
            }

            #foreach($social in $data.getSocial())
                #${social.getId()} {
                    color: ${utils.toRgba($social.getColor())};
                }
            #end

            #foreach($module in $modules)
                #set($icon = $module.getModuleClass().getAnnotation($icon_class))
                .${utils.genId($icon.color())} {
                     color: $icon.color();
                }
            #end
        </style>

        #if($font.getLocation())
            <link rel="stylesheet" href="$font.getLocation()">
        #end

        <link rel="stylesheet" href="/css/styles.css" type="text/css" >
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">

        ## We only ever use this on the homepage, no lead to load it for others.
        #if($page_name.equals("Home"))
            <link rel="stylesheet" type="text/css" href="/css/darcula.css">
            <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.13.1/highlight.min.js"></script>
            <script>hljs.initHighlightingOnLoad();</script>
        #end

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script type="text/javascript" src="/js/scripts.js"></script>

        <meta property="og:site_name" content="$data.getName()"/>
        <meta property="og:title" content="$data.getName() | Help"/>
        <meta property="og:description" content="$data.getDescription()"/>

        #if($data.getLogo())
            <meta property="og:image" content="$data.getLogo()"/>
        #end
    </head>
    <body>
        <header>
            <a href="/">
                #if($data.getLogo())
                    <img id="logo" src=$data.getLogo() alt="Logo representing the application."/>
                #end

                <h1 class="hover">$data.getName()</h1>
            </a>
            <ul>
                #foreach($social in $data.getSocial())
                    <li class="hover"><a href="$social.getLink()" target="_blank"><span id="$social.getId()" class="$social.getIcon()"></span></a></li>
                #end
            </ul>
            <form class="js" action="/all-commands.html">
                <input id="search" type="text" placeholder="Search Commands..." name="search">
            </form>
        </header>
        <div id="content">
            <nav>
                <a href="#if($no_readme)/#else/all-commands.html) #end"><h1 class="hover">All Commands</h1></a>
                <ul>
                    #foreach($entry in $groups.entrySet())
                        #set($_group_name = $entry.key)
                        #set($_group_modules = $entry.value)
                        <li class="hover #if($_group_name.equals($module_group)) selected #end">
                            <a href="/groups/${utils.toOutput($_group_name)}.html"><h2>$_group_name</h2></a>
                            <ul class="module">
                                #foreach($_group_module in $_group_modules)
                                    #set($_group_module_name = $_group_module.getAnnotation().id())
                                    <a href="/modules/${utils.toOutput($_group_module_name)}.html">
                                        #set($icon = $_group_module.getModuleClass().getAnnotation($icon_class))
                                        #set($iconId = $utils.genId($icon.color()))
                                        <li class="module hover #if($_group_module_name.equals($module_id)) selected #end">
                                            <span class="icon $iconId $icon.icon()"></span><h3 class="inline $iconId">$_group_module_name</h3>
                                        </li>
                                    </a>
                                #end
                            </ul>
                        </li>
                    #end
                </ul>
            </nav>
            <main>
                #if($content.endsWith(".vm"))
                    #parse($content)
                #else
                    $content
                #end
            </main>
        </div>
    </body>
</html>
