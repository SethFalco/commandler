<configuration xmlns="https://commandler.elypia.org"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="https://commandler.elypia.org schema.xsd">
  <commandler>
    <activator property="org.elypia.commandler.dispatchers.StandardDispatcher.aliases">
      <display-name>Aliases</display-name>
    </activator>
    <activator property="org.elypia.commandler.dispatchers.MatchDispatcher.pattern">
      <display-name>Pattern</display-name>
    </activator>
    <adapter type="org.elypia.commandler.adapters.BooleanAdapter">
      <compatible>java.lang.Boolean</compatible>
    </adapter>
    <adapter type="org.elypia.commandler.adapters.CharAdapter">
      <compatible>java.lang.Character</compatible>
    </adapter>
    <adapter type="org.elypia.commandler.adapters.DurationAdapter">
      <compatible>java.time.Duration</compatible>
    </adapter>
    <adapter type="org.elypia.commandler.adapters.EnumAdapter">
      <compatible>java.lang.Enum</compatible>
    </adapter>
    <adapter type="org.elypia.commandler.adapters.LocaleAdapter">
      <compatible>java.util.Locale</compatible>
    </adapter>
    <adapter type="org.elypia.commandler.adapters.MetaControllerAdapter">
      <compatible>org.elypia.commandler.metadata.MetaController</compatible>
    </adapter>
    <adapter type="org.elypia.commandler.adapters.NumberAdapter">
      <compatible>java.lang.Number</compatible>
      <compatible>java.lang.Double</compatible>
      <compatible>java.lang.Float</compatible>
      <compatible>java.lang.Long</compatible>
      <compatible>java.lang.Integer</compatible>
      <compatible>java.lang.Short</compatible>
      <compatible>java.lang.Byte</compatible>
    </adapter>
    <adapter type="org.elypia.commandler.adapters.StringAdapter">
      <compatible>java.lang.CharSequence</compatible>
    </adapter>
    <adapter type="org.elypia.commandler.adapters.TimeUnitAdapter">
      <compatible>java.util.concurrent.TimeUnit</compatible>
    </adapter>
    <adapter type="org.elypia.commandler.adapters.UrlAdapter">
      <compatible>java.net.URL</compatible>
    </adapter>
  </commandler>
</configuration>
