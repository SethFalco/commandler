<configuration>
  <header>
    <providers>
      <provider config-tag="yaml" config-class="org.elypia.commandler.configuration.YAMLConfigurationProvider"/>
    </providers>
    <result>
      <expressionEngine config-class="org.elypia.commandler.configuration.XmlExpressionEngine"/>
    </result>
    <combiner>
      <additional>
        <list-nodes>
          <node>controller</node>
          <node>command</node>
          <node>param</node>
          <node>adapter</node>
          <node>messenger</node>
          <node>type</node>
        </list-nodes>
      </additional>
    </combiner>
  </header>
  <override>
    <env/>
    <system/>
    <yaml fileName="commandler.yml" config-optional="true"/>
    <yaml fileName="commandler.yaml" config-optional="true"/>
    <xml fileName="commandler.xml" config-optional="true"/>
  </override>
</configuration>
